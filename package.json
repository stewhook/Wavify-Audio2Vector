{
  "name": "audiofigma-plugin",
  "private": true,
    "scripts": {
      "clean": "rimraf dist pkg",
      "build:wasm": "wasm-pack build --target web --release",
      "build:ts": "esbuild src/code.ts --bundle --outfile=dist/code.js --format=iife --tsconfig=tsconfig.json",
      "copy": "powershell -Command \"New-Item -ItemType Directory -Path 'dist' -Force\" && powershell -Command \"Copy-Item 'src/ui.html' 'dist/ui.html'\" && powershell -Command \"Copy-Item 'pkg/*' 'dist/' -Recurse\"",
      "build": "npm-run-all clean build:wasm build:ts copy"
    },
    "devDependencies": {
      "@figma/plugin-typings": "^1.90.0",
      "cpy-cli": "^5.0.0",
      "esbuild": "^0.24.0",
      "npm-run-all": "^4.1.5",
      "rimraf": "^5.0.0"
    }
  }